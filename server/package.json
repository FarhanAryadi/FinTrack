{
	"name": "finance-tracker-server",
	"version": "1.0.0",
	"description": "Backend server for Finance Tracker app",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"build": "tsc -p tsconfig.json",
		"postinstall": "PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK=0 prisma generate --schema=./prisma/schema.prisma && PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK=0 prisma db push --schema=./prisma/schema.prisma --accept-data-loss",
		"seed": "ts-node src/seed.ts"
	},
	"prisma": {
		"schema": "./prisma/schema.prisma",
		"seed": "ts-node src/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.10.2",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"typescript": "^5.1.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.24",
		"prisma": "^5.10.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
