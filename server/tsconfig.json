{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": ["es2018", "esnext.asynciterable"],
		"skipLibCheck": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
